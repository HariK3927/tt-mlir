include "ttmlir/Target/Common/types.fbs";

namespace tt.target.metal;

table BufferDesc {
  grid_shape: [int];
  shard_shape: [int];
  tile_shape: Dim2d;
  data_type: DataType;
  core_range_set: [Dim2dRange];
  memory_space: MemorySpace;
  size: uint64;
  num_buffers: uint64;
  page_size: uint64;
}

table BufferRef {
  global_id: uint32;
  address: uint64;
  size: uint64;
  desc: BufferDesc;
}

table CBRef {
  port: uint32;
  buffer_ref: BufferRef;
}
